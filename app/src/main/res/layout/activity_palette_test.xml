<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rgb_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:maxLength="3"
        android:singleLine="true"
        android:src="@drawable/green" />

    <EditText
        android:id="@+id/r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="R"
        android:maxLength="3"
        android:singleLine="true" />

    <EditText
        android:id="@+id/g"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="G"
        android:maxLength="3"
        android:singleLine="true" />

    <EditText
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="B"
        android:maxLength="3"
        android:singleLine="true" />


    <TextView
        android:id="@+id/vibrant_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text="vibrant"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/light_vibrant_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text="light vibrant"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/dark_vibrant_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text="dark vibrant"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/muted_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text="muted"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/light_muted_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text="light muted"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/dark_muted_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:text="dark muted"
        android:textColor="@android:color/black" />


</LinearLayout>
